---
import Layout from "../layouts/Layout.astro";
import SectionHeader from "../components/ui/SectionHeader.astro";
import BrutalCard from "../components/ui/BrutalCard.astro";
import BrutalButton from "../components/ui/BrutalButton.astro";
import GradientSection from "../components/ui/GradientSection.astro";
import Heading from "../components/ui/Heading.astro";
import Text from "../components/ui/Text.astro";
import BrutalSection from "../components/ui/BrutalSection.astro";
import ContactSection from "../components/sections/ContactSection.astro";
---

<Layout 
    title="Kontak & Lokasi - KF13 Klub Fisika Indonesia" 
    description="Hubungi KF13 dan kunjungi Sanggar Fisika kami di Yogyakarta. Alamat lengkap, kontak WhatsApp, email, dan media sosial."
>
            <!-- Hero Section -->
            <GradientSection variant="blue-purple">
                <div class="max-w-6xl mx-auto px-6 text-center">
                    <Heading level={1} size="3xl" class="uppercase tracking-tight transform -rotate-1 mb-8">
                        KONTAK & <span class="text-secondary dark:text-secondary-dark">LOKASI</span>
                    </Heading>
                    <BrutalCard variant="white" class="transform rotate-1 max-w-2xl mx-auto">
                        <Text size="lg" class="font-bold mb-4">
                            üìç Mari Berkunjung ke Sanggar Fisika KF13!
                        </Text>
                        <Text class="font-semibold">
                            Temukan kami di Yogyakarta dan bergabunglah dalam komunitas fisika yang penuh semangat belajar.
                        </Text>
                    </BrutalCard>
                </div>
            </GradientSection>

            <!-- Contact Methods -->
            <BrutalSection background="white" padding="lg">
                <SectionHeader title="HUBUNGI KAMI" subtitle="Berbagai cara untuk terhubung dengan KF13" className="mb-8" />
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {[
                            {
                                title: "WhatsApp Admin",
                                icon: "üì±",
                                info: "+62 822-2500-9253",
                                description: "Chat langsung dengan admin KF13 untuk info cepat",
                                action: "Chat Sekarang",
                                link: "https://wa.me/6282225009253?text=Halo%20KF13!%20Saya%20ingin%20bertanya%20tentang%20klub%20fisika",
                                bg: "bg-accent",
                                urgent: true
                            },
                            {
                                title: "Email Resmi",
                                icon: "üìß",
                                info: "info@klubfisika.org",
                                description: "Untuk pertanyaan formal, kerjasama, dan proposal",
                                action: "Kirim Email",
                                link: "mailto:info@klubfisika.org",
                                bg: "bg-primary",
                                urgent: false
                            },
                            {
                                title: "Instagram",
                                icon: "üì∏",
                                info: "@klubfisika13",
                                description: "Follow untuk update kegiatan dan konten edukatif",
                                action: "Follow IG",
                                link: "https://instagram.com/klubfisika13",
                                bg: "bg-secondary",
                                urgent: false
                            },
                            {
                                title: "YouTube Channel",
                                icon: "üé•",
                                info: "KF13 Fisika Indonesia",
                                description: "Video pembelajaran dan dokumentasi kegiatan",
                                action: "Subscribe",
                                link: "https://youtube.com/@klubfisika13",
                                bg: "bg-primary",
                                urgent: false
                            },
                            {
                                title: "Telegram Group",
                                icon: "üí¨",
                                info: "KF13 Community",
                                description: "Diskusi fisika dan sharing materi pembelajaran",
                                action: "Join Group",
                                link: "https://t.me/klubfisika13",
                                bg: "bg-accent",
                                urgent: false
                            },
                            {
                                title: "GitHub Repository",
                                icon: "üíª",
                                info: "klubfisika/resources",
                                description: "Akses materi pembelajaran dan project open source",
                                action: "View Repo",
                                link: "https://github.com/klubfisika",
                                bg: "bg-gray-600 text-on-dark",
                                urgent: false
                            }
                        ].map((contact, index) => {
                            // Determine variant and text color
                            let variant = 'custom';
                            let textColor = 'white';
                            let classes = '';
                            
                            if (contact.bg.includes('bg-primary')) {
                                variant = 'primary';
                            } else if (contact.bg.includes('bg-secondary')) {
                                variant = 'secondary';
                            } else if (contact.bg.includes('bg-accent')) {
                                variant = 'accent';
                            } else {
                                // For custom backgrounds like GitHub
                                classes = contact.bg;
                                textColor = 'white'; // Force white text for all colored backgrounds
                            }
                            
                            return (
                            <BrutalCard 
                                variant={variant}
                                rotation={index % 2 === 0 ? 'right' : 'left'}
                                urgent={contact.urgent}
                                className={classes}
                            >
                                
                                <div class="text-center mb-4">
                                    <div class="text-4xl mb-3">{contact.icon}</div>
                                    <Heading level={3} size="sm" color={textColor} class="uppercase mb-2">
                                        {contact.title}
                                    </Heading>
                                    <Text color={textColor} size="sm" class="opacity-90 font-bold">{contact.info}</Text>
                                </div>
                                
                                <Text color={textColor} size="sm" class="opacity-80 text-center mb-6 leading-relaxed">
                                    {contact.description}
                                </Text>
                                
                                <BrutalButton
                                    variant="surface"
                                    size="md"
                                    href={contact.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    className="w-full"
                                    ariaLabel={`${contact.action} - ${contact.title}`}
                                >
                                    {contact.action}
                                </BrutalButton>
                            </BrutalCard>
                            );
                        })}
                    </div>
            </BrutalSection>

            <!-- Physical Location -->
            <BrutalSection background="surface" padding="lg">
                <SectionHeader title="SANGGAR FISIKA KF13" subtitle="Lokasi fisik yang bisa dikunjungi" className="mb-8" />
                    
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                        <!-- Location Info -->
                        <div class="space-y-8">
                            <div class="bg-primary dark:bg-primary-dark border-4 border-dark dark:border-light p-6 transform -rotate-1 shadow-brutal">
                                <h3 class="text-2xl font-black uppercase text-on-primary mb-4">
                                    üìç ALAMAT LENGKAP
                                </h3>
                                <div class="space-y-3 text-on-primary">
                                    <p class="font-bold text-lg">Sanggar Fisika KF13</p>
                                    <p class="font-semibold">Yogyakarta, Daerah Istimewa Yogyakarta</p>
                                    <p class="text-sm opacity-90">Indonesia</p>
                                </div>
                                
                                <div class="mt-6 pt-4 border-t-2 border-white/30">
                                    <p class="text-on-primary opacity-90 text-sm mb-4">
                                        üïí <strong>Jam Operasional:</strong><br>
                                        Senin - Jumat: 15:00 - 20:00 WIB<br>
                                        Sabtu - Minggu: 09:00 - 17:00 WIB
                                    </p>
                                    <p class="text-on-primary opacity-90 text-xs">
                                        *Untuk kunjungan, harap konfirmasi terlebih dahulu via WhatsApp
                                    </p>
                                </div>
                            </div>
                            
                            <!-- Visit CTA -->
                            <BrutalCard variant="accent" rotation="right">
                                <Heading level={4} size="md" color="white" class="uppercase mb-4">
                                    üöó MAU BERKUNJUNG?
                                </Heading>
                                <Text color="white" class="mb-6">
                                    Koordinasi dulu dengan admin untuk memastikan kami ada di tempat!
                                </Text>
                                
                                <div class="flex flex-col sm:flex-row gap-3">
                                    <BrutalButton
                                        variant="surface"
                                        size="md"
                                        href="https://wa.me/6282225009253?text=Halo%20KF13!%20Saya%20ingin%20berkunjung%20ke%20Sanggar%20Fisika.%20Kapan%20waktu%20yang%20tepat?"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        ariaLabel="Konfirmasi kunjungan via WhatsApp"
                                    >
                                        üì± KONFIRMASI
                                    </BrutalButton>
                                    <BrutalButton
                                        variant="primary"
                                        size="md"
                                        href="https://maps.app.goo.gl/6qKexhinfiqhfZTT7"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        ariaLabel="Buka lokasi di Google Maps"
                                    >
                                        üó∫Ô∏è BUKA MAPS
                                    </BrutalButton>
                                </div>
                            </BrutalCard>
                        </div>
                        
                        <!-- Map Embed -->
                        <div class="bg-white dark:bg-slate-700 border-4 border-dark dark:border-light p-4 transform rotate-1 shadow-brutal">
                            <div class="aspect-video bg-gray-200 dark:bg-gray-600 rounded border-2 border-dark dark:border-light overflow-hidden">
                                <iframe 
                                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3953.0!2d110.3695!3d-7.7956!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zN8KwNDcnNDQuMiJTIDExMMKwMjInMTAuMiJF!5e0!3m2!1sen!2sid!4v1640000000000!5m2!1sen!2sid"
                                    width="100%" 
                                    height="100%" 
                                    style="border:0;" 
                                    allowfullscreen="" 
                                    loading="lazy" 
                                    referrerpolicy="no-referrer-when-downgrade"
                                    title="Lokasi Sanggar Fisika KF13"
                                ></iframe>
                            </div>
                            <div class="mt-4 text-center">
                                <BrutalButton
                                    variant="primary"
                                    size="md"
                                    href="https://maps.app.goo.gl/6qKexhinfiqhfZTT7"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    ariaLabel="Lihat lokasi di Google Maps"
                                >
                                    üìç LIHAT DI GOOGLE MAPS
                                </BrutalButton>
                            </div>
                        </div>
                    </div>
            </BrutalSection>

            <!-- FAQ Contact -->
            <section class="py-20 bg-white dark:bg-slate-700 transition-colors">
                <div class="max-w-4xl mx-auto px-6">
                    <SectionHeader title="PERTANYAAN UMUM" subtitle="Jawaban cepat untuk pertanyaan yang sering ditanyakan" className="mb-8" />
                    
                    <div class="space-y-6">
                        {[
                            {
                                question: "Bagaimana cara bergabung dengan KF13?",
                                answer: "Hubungi admin via WhatsApp atau datang langsung ke Sanggar Fisika. Kami terbuka untuk semua kalangan yang tertarik dengan fisika!"
                            },
                            {
                                question: "Apakah ada biaya untuk bergabung?",
                                answer: "Bergabung dengan komunitas KF13 GRATIS! Beberapa workshop atau event khusus mungkin ada biaya untuk cover materi dan konsumsi."
                            },
                            {
                                question: "Kapan waktu terbaik untuk berkunjung?",
                                answer: "Sanggar buka Senin-Jumat (15:00-20:00) dan weekend (09:00-17:00). Konfirmasi dulu via WhatsApp untuk memastikan ada kegiatan."
                            },
                            {
                                question: "Apa saja kegiatan rutin KF13?",
                                answer: "Workshop mingguan, diskusi fisika, eksperimen praktis, kompetisi, dan project kolaboratif. Cek halaman Events untuk jadwal terbaru!"
                            }
                        ].map((faq, index) => {
                            const variants = ['primary', 'accent', 'secondary', 'primary'];
                            return (
                            <BrutalCard 
                                variant={variants[index % 4]}
                                rotation={index % 2 === 0 ? 'right' : 'left'}
                            >
                                <Heading level={4} size="sm" color="white" class="uppercase mb-3">
                                    ‚ùì {faq.question}
                                </Heading>
                                <Text color="white" leading="relaxed">
                                    {faq.answer}
                                </Text>
                            </BrutalCard>
                            );
                        })}
                    </div>
                    
                    <div class="text-center mt-8">
                        <BrutalCard variant="secondary" rotation="left" className="inline-block">
                            <Text color="white" class="font-bold mb-4">
                                Masih ada pertanyaan lain?
                            </Text>
                            <BrutalButton
                                variant="surface"
                                size="md"
                                href="https://wa.me/6282225009253?text=Halo%20KF13!%20Saya%20punya%20pertanyaan%20tentang%20klub%20fisika"
                                target="_blank"
                                rel="noopener noreferrer"
                                ariaLabel="Tanya langsung via WhatsApp"
                            >
                                üí¨ TANYA LANGSUNG
                            </BrutalButton>
                        </BrutalCard>
                    </div>
                </div>
            </section>

    <ContactSection />

<script>
    // Contact interaction tracking
    document.addEventListener('DOMContentLoaded', () => {
        // Track contact method clicks
        document.querySelectorAll('a[href^="https://wa.me"], a[href^="mailto:"], a[href^="https://instagram"], a[href^="https://youtube"], a[href^="https://t.me"], a[href^="https://github"]').forEach(link => {
                    link.addEventListener('click', () => {
                        const method = link.href.includes('wa.me') ? 'WhatsApp' : 
                                     link.href.includes('mailto') ? 'Email' :
                                     link.href.includes('instagram') ? 'Instagram' :
                                     link.href.includes('youtube') ? 'YouTube' :
                                     link.href.includes('t.me') ? 'Telegram' :
                                     link.href.includes('github') ? 'GitHub' : 'Unknown';
                        
                        console.log(`Contact method used: ${method}`);
                    });
                });

                // Map interaction
                const mapFrame = document.querySelector('iframe[title="Lokasi Sanggar Fisika KF13"]');
                if (mapFrame) {
                    mapFrame.addEventListener('load', () => {
                        console.log('Map loaded successfully');
                    });
                }
            });
        </script>
</Layout>
