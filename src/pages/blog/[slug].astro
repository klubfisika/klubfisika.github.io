---
import Layout from "@layouts/Layout.astro";
import { getCollection, render } from 'astro:content';
import "@/styles/article.css";

// Static paths generation
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.id },
    props: { entry }
  }));
}

// Props and content
const { entry } = Astro.props;
const { Content } = await render(entry);

// Post data formatting
const post = {
  slug: entry.id,
  title: entry.data.title,
  excerpt: entry.data.description,
  author: entry.data.author || 'KF13 Team',
  date: entry.data.pubDate.toISOString().split('T')[0],
  readTime: Math.ceil(entry.body.length / 200) + ' menit',
  category: entry.data.category || 'Artikel',
  tags: entry.data.tags || [],
  image: entry.data.heroImage || '/blog-placeholder-1.jpg'
};

// Indonesian date formatter
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('id-ID', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Category badge colors
const categoryColors: Record<string, string> = {
  'Tutorial': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
  'Eksperimen': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  'Teori': 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
  'Tips Belajar': 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200',
  'Testing': 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
};
const categoryClass = categoryColors[post.category] || 'bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-200';
---

<Layout title={`${post.title} - KF13 Blog`} description={post.excerpt}>
  <!-- SEO Meta Tags -->
  <Fragment slot="head">
    <meta name="author" content={post.author} />
    <meta name="article:published_time" content={post.date} />
    <meta name="article:section" content={post.category} />
    {post.tags.map(tag => <meta name="article:tag" content={tag} />)}
    <meta name="reading-time" content={post.readTime} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={post.title} />
    <meta property="og:description" content={post.excerpt} />
    <meta property="og:image" content={new URL(post.image, Astro.url).href} />
    <meta property="og:url" content={Astro.url.href} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={post.title} />
    <meta name="twitter:description" content={post.excerpt} />
    <meta name="twitter:image" content={new URL(post.image, Astro.url).href} />
    
    <!-- Canonical -->
    <link rel="canonical" href={Astro.url.href} />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": post.title,
      "description": post.excerpt,
      "image": new URL(post.image, Astro.url).href,
      "author": { "@type": "Person", "name": post.author },
      "publisher": {
        "@type": "Organization",
        "name": "KF13 Klub Fisika Indonesia",
        "logo": { "@type": "ImageObject", "url": new URL("/kf13-logo.png", Astro.url).href }
      },
      "datePublished": post.date,
      "dateModified": post.date,
      "mainEntityOfPage": { "@type": "WebPage", "@id": Astro.url.href }
    })} />
    
    <!-- Prevent yellow flash - override surface color immediately -->
    <style>
      :root { --color-surface: #ffffff !important; }
      .dark { --color-surface: #111827 !important; }
    </style>
  </Fragment>

  <div class="article-page-wrapper" style="background: #ffffff; min-height: 100vh;">
  <div class="article-container">
    <!-- Article Header -->
    <header class="article-header pt-6 sm:pt-8 lg:pt-10">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
          <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Home</a>
          <span>â†’</span>
          <a href="/blog" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Blog</a>
          <span>â†’</span>
          <span class="text-gray-600 dark:text-gray-400">{post.category}</span>
        </div>
      </nav>

      <!-- Category Badge -->
      <div class="mb-4">
        <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full ${categoryClass}`}>
          {post.category.toUpperCase()}
        </span>
      </div>

      <!-- Title & Subtitle -->
      <h1 class="article-title">{post.title}</h1>
      <p class="article-subtitle">{post.excerpt}</p>
      
      <!-- Meta Info -->
      <div class="article-meta">
        <div class="article-meta-item"><span>ğŸ‘¨â€ğŸ”¬</span><span>{post.author}</span></div>
        <div class="article-meta-item"><span>ğŸ“…</span><span>{formatDate(post.date)}</span></div>
        <div class="article-meta-item"><span>â±ï¸</span><span>{post.readTime} baca</span></div>
      </div>
      
      <!-- Tags -->
      {post.tags.length > 0 && (
        <div class="article-tags">
          {post.tags.map((tag: string) => (
            <a href={`/blog?tag=${tag}`} class="article-tag">#{tag}</a>
          ))}
        </div>
      )}
    </header>

    <!-- Article Content -->
    <article class="article-content">
      <Content />
    </article>

    <!-- Article Footer -->
    <footer class="article-footer">
      <!-- Share Buttons -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-gray-100">ğŸ“¤ Bagikan Artikel</h3>
        <div class="flex flex-wrap gap-3">
          <a href={`https://wa.me/?text=Baca artikel fisika menarik: ${post.title} ${Astro.url.href}`}
             target="_blank" rel="noopener noreferrer"
             class="share-btn bg-green-700 hover:bg-green-800 hover:text-white">ğŸ“± WhatsApp</a>
          <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${Astro.url.href}`}
             target="_blank" rel="noopener noreferrer"
             class="share-btn bg-blue-600 hover:bg-blue-700 hover:text-white">ğŸ¦ Twitter</a>
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url.href}`}
             target="_blank" rel="noopener noreferrer"
             class="share-btn bg-blue-700 hover:bg-blue-800 hover:text-white">ğŸ“˜ Facebook</a>
        </div>
      </div>

      <!-- Author Info -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 mb-8">
        <h4 class="text-lg font-semibold mb-3 text-gray-900 dark:text-gray-100">âœï¸ Tentang Penulis</h4>
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 bg-blue-500 dark:bg-blue-600 rounded-full flex items-center justify-center">
            <span class="text-2xl text-white">ğŸ‘¨â€ğŸ”¬</span>
          </div>
          <div>
            <h5 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">{post.author}</h5>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Kontributor aktif KF13 yang berpengalaman dalam pembelajaran fisika dan eksperimen praktis.
            </p>
          </div>
        </div>
      </div>

      <!-- Navigation -->
      <div class="flex flex-col sm:flex-row gap-4 justify-between mb-8 sm:mb-10 lg:mb-12">
        <a href="/blog" class="nav-btn bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600">
          â† Kembali ke Blog
        </a>
        <a href="/events" class="nav-btn bg-blue-600 text-white hover:bg-blue-700">
          Lihat Events â†’
        </a>
      </div>
    </footer>
  </div>
  </div>
</Layout>

<style>
  .article-footer {
    max-width: 680px;
    margin: 4rem auto 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }
  
  @media (max-width: 768px) {
    .article-footer {
      margin-bottom: 2.5rem;
    }
  }
  
  .dark .article-footer {
    border-top-color: #374151;
  }
  
  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: background-color 0.2s;
