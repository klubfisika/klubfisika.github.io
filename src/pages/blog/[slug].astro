                    </div>
                    
                    <h1 class="text-3xl md:text-5xl font-black uppercase leading-tight text-dark dark:text-light mb-6">
                        {post.title}
                    </h1>
                    
                    <p class="text-lg text-dark dark:text-light opacity-80 leading-relaxed mb-8">
                        {post.excerpt}
                    </p>
                    
                    <!-- Tags -->
                    <div class="flex flex-wrap gap-2">
                        {post.tags.map((tag: string) => (
                            <span class="bg-accent dark:bg-accent-dark border border-dark dark:border-light px-2 py-1 text-xs font-semibold text-dark dark:text-light">
                                #{tag}
                            </span>
                        ))}
                    </div>
                </div>

                <!-- Article Content -->
                <div class="prose prose-lg max-w-none">
                    <div class="bg-white dark:bg-slate-700 border-4 border-dark dark:border-light p-8 shadow-brutal">
                        <div 
                            class="article-content text-dark dark:text-light"
                            set:html={post.content}
                        />
                    </div>
                </div>

                <!-- Article Footer -->
                <div class="mt-12 pt-8 border-t-4 border-dark dark:border-light">
                    <!-- Share Buttons -->
                    <div class="mb-8">
                        <h3 class="text-xl font-black uppercase text-dark dark:text-light mb-4">üì§ BAGIKAN ARTIKEL</h3>
                        <div class="flex flex-wrap gap-3">
                            <a 
                                href={`https://wa.me/?text=Baca artikel fisika menarik: ${post.title} https://klubfisika.org/blog/${post.slug}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="bg-green-500 border-2 border-dark dark:border-light px-4 py-2 font-bold text-white hover:scale-105 transition-transform"
                            >
                                üì± WhatsApp
                            </a>
