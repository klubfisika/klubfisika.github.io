---
import "../styles/design-system.css";
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/Navigation.astro";
import Hero from "../components/sections/Hero.astro";
import About from "../components/sections/About.astro";
import VisionMission from "../components/sections/VisionMission.astro";
import Programs from "../components/sections/Programs.astro";
import Gallery from "../components/sections/Gallery.astro";
import FAQ from "../components/sections/FAQ.astro";
import CTA from "../components/sections/CTA.astro";
import Footer from "../components/sections/Footer.astro";
import DarkModeToggle from "../components/ui/DarkModeToggle.astro";
import FloatingWhatsApp from "../components/ui/FloatingWhatsApp.astro";
import ScrollProgress from "../components/ui/ScrollProgress.astro";
import BackToTop from "../components/ui/BackToTop.astro";
import TestingChecklist from "../components/ui/TestingChecklist.astro";
import ResponsiveTest from "../components/ui/ResponsiveTest.astro";
import GoogleAnalytics from "../components/analytics/GoogleAnalytics.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<html lang="id">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <!-- Analytics - Replace with actual GA4 ID -->
        <!-- <GoogleAnalytics id="G-XXXXXXXXXX" /> -->
        
        <!-- Prevent FOUC (Flash of Unstyled Content) -->
        <script is:inline>
          if (localStorage.theme === 'dark' || 
              (!localStorage.theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
          }
        </script>
    </head>
    <body class="font-sans bg-surface dark:bg-surface-dark text-dark dark:text-light transition-colors">
        <!-- UI Components -->
        <ScrollProgress />
        <Navigation />
        <DarkModeToggle />
        <FloatingWhatsApp 
          number="+6281234567890"
          message="Halo! Saya tertarik bergabung dengan KF13 - Klub Fisika Indonesia"
        />
        <BackToTop threshold={300} />
        
        <!-- Development Testing Tools -->
        <TestingChecklist />
        <ResponsiveTest />
        
        <main class="pt-20"> <!-- Account for fixed navigation -->
          <Hero />
          <About />
          <VisionMission />
          <Programs />
          <Gallery />
          <FAQ />
          <CTA />
          <Footer />
        </main>
    </body>
</html>
