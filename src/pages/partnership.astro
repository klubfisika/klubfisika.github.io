---
import Layout from "../layouts/Layout.astro";
import SectionHeader from "../components/ui/SectionHeader.astro";
import BrutalCard from "../components/ui/BrutalCard.astro";
import BrutalButton from "../components/ui/BrutalButton.astro";
import GradientSection from "../components/ui/GradientSection.astro";
import Heading from "../components/ui/Heading.astro";
import Text from "../components/ui/Text.astro";
import BrutalSection from "../components/ui/BrutalSection.astro";
---

<Layout 
    title="Mitra & Kemitraan - KF13 Klub Fisika Indonesia" 
    description="Jaringan kemitraan KF13 dengan universitas dan sekolah di Yogyakarta untuk pengembangan pendidikan fisika Indonesia"
>
    <!-- Hero Section -->
    <GradientSection variant="purple-green">
        <div class="max-w-6xl mx-auto px-6 text-center">
            <Heading level={1} size="3xl" class="uppercase tracking-tight transform -rotate-1 mb-8">
                MITRA & <span class="text-primary dark:text-primary-dark">KEMITRAAN</span>
            </Heading>
            <BrutalCard variant="white" class="transform rotate-1 max-w-2xl mx-auto">
                <Text size="lg" class="font-bold mb-4">
                    ü§ù Membangun Jaringan Pendidikan Fisika Bersama
                </Text>
                <Text class="font-semibold">
                    KF13 tumbuh dari solidaritas anggota yang tersebar di berbagai kampus Yogyakarta, 
                    menciptakan jaringan pembelajaran fisika yang kuat dan berkelanjutan.
                </Text>
            </BrutalCard>
        </div>
    </GradientSection>

    <!-- University Network -->
    <BrutalSection background="white" padding="lg">
        <SectionHeader title="JARINGAN KAMPUS" subtitle="Anggota dari berbagai perguruan tinggi di Yogyakarta" className="mb-8" />
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {[
                {
                    name: "Universitas Gadjah Mada",
                    abbr: "UGM",
                    type: "Universitas Negeri",
                    connection: "Anggota alumni dan mahasiswa aktif dari berbagai fakultas",
                    members: "15+ anggota",
                    variant: "primary",
                    icon: "üèõÔ∏è"
                },
                {
                    name: "Universitas Negeri Yogyakarta",
                    abbr: "UNY",
                    type: "Universitas Negeri",
                    connection: "Mahasiswa dan alumni Pendidikan Fisika yang aktif dalam komunitas",
                    members: "12+ anggota",
                    variant: "secondary",
                    icon: "üéì"
                },
                {
                    name: "UIN Sunan Kalijaga",
                    abbr: "UIN SUKA",
                    type: "Universitas Islam Negeri",
                    connection: "Mahasiswa Fisika dan Pendidikan Fisika yang antusias",
                    members: "8+ anggota",
                    variant: "accent",
                    icon: "üïå"
                },
                {
                    name: "Universitas Ahmad Dahlan",
                    abbr: "UAD",
                    type: "Universitas Swasta",
                    connection: "Mahasiswa Pendidikan Fisika dan Teknik",
                    members: "6+ anggota",
                    variant: "primary",
                    icon: "üè´"
                },
                {
                    name: "Universitas Sanata Dharma",
                    abbr: "USD",
                    type: "Universitas Swasta",
                    connection: "Mahasiswa Fisika dan Pendidikan Fisika",
                    members: "5+ anggota",
                    variant: "secondary",
                    icon: "‚õ™"
                },
                {
                    name: "Universitas Lainnya",
                    abbr: "OTHERS",
                    type: "Berbagai Kampus",
                    connection: "Mahasiswa dan alumni dari berbagai universitas di Yogyakarta",
                    members: "10+ anggota",
                    variant: "accent",
                    icon: "üåü"
                }
            ].map((university, index) => (
                <BrutalCard 
                    variant={university.variant}
                    rotation={index % 2 === 0 ? 'right' : 'left'}
                >
                    <div class="text-center mb-4">
                        <div class="text-4xl mb-3">{university.icon}</div>
                        <Heading level={3} size="sm" color="white" class="uppercase mb-1">
                            {university.abbr}
                        </Heading>
                        <Text color="white" size="sm" class="opacity-80 font-semibold">{university.type}</Text>
                    </div>
                    
                    <div class="space-y-3 text-white opacity-90 text-sm">
                        <p class="font-semibold">{university.name}</p>
                        <p>{university.connection}</p>
                        <div class="bg-white/20 border-2 border-white/30 p-2 rounded text-center">
                            <span class="font-bold">üë• {university.members}</span>
                        </div>
                    </div>
                </BrutalCard>
            ))}
        </div>
    </BrutalSection>

    <!-- Partnership Benefits -->
    <BrutalSection background="surface" padding="lg">
        <SectionHeader title="MANFAAT KEMITRAAN" subtitle="Keuntungan bergabung dengan jaringan KF13" className="mb-8" />
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-8">
                <BrutalCard variant="primary" rotation="left">
                    <Heading level={3} size="lg" color="white" class="uppercase mb-4">
                        üéØ UNTUK INSTITUSI
                    </Heading>
                    <ul class="text-white space-y-2 text-sm">
                        <li>‚úÖ Akses ke talent pool mahasiswa fisika terbaik</li>
                        <li>‚úÖ Kolaborasi penelitian dan pengembangan</li>
                        <li>‚úÖ Program magang dan praktik kerja</li>
                        <li>‚úÖ Workshop dan seminar eksklusif</li>
                        <li>‚úÖ Networking dengan institusi lain</li>
                    </ul>
                </BrutalCard>
            </div>
            
            <div class="space-y-8">
                <BrutalCard variant="accent" rotation="right">
                    <Heading level={3} size="lg" color="white" class="uppercase mb-4">
                        üöÄ UNTUK ANGGOTA
                    </Heading>
                    <ul class="text-white space-y-2 text-sm">
                        <li>‚úÖ Kesempatan magang di perusahaan partner</li>
                        <li>‚úÖ Akses ke job opportunities eksklusif</li>
                        <li>‚úÖ Mentoring dari profesional industri</li>
                        <li>‚úÖ Sertifikasi dan pelatihan gratis</li>
                        <li>‚úÖ Networking lintas universitas</li>
                    </ul>
                </BrutalCard>
            </div>
        </div>
    </BrutalSection>

    <!-- Current Partners -->
    <BrutalSection background="white" padding="lg">
        <SectionHeader title="MITRA SAAT INI" subtitle="Organisasi dan institusi yang berkolaborasi dengan KF13" className="mb-8" />
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {[
                {
                    name: "Laboratorium Fisika UGM",
                    type: "Institusi Pendidikan",
                    collaboration: "Penyediaan fasilitas lab untuk eksperimen dan penelitian mahasiswa",
                    since: "2020",
                    variant: "secondary"
                },
                {
                    name: "Planetarium Yogyakarta",
                    type: "Institusi Sains",
                    collaboration: "Program edukasi astronomi dan observasi bintang bersama",
                    since: "2021",
                    variant: "primary"
                },
                {
                    name: "LIPI Yogyakarta",
                    type: "Lembaga Penelitian",
                    collaboration: "Kolaborasi penelitian dan akses ke jurnal ilmiah",
                    since: "2022",
                    variant: "accent"
                },
                {
                    name: "Komunitas Sains DIY",
                    type: "Organisasi Komunitas",
                    collaboration: "Event bersama dan program literasi sains masyarakat",
                    since: "2019",
                    variant: "primary"
                }
            ].map((partner, index) => (
                <BrutalCard 
                    variant={partner.variant}
                    rotation={index % 2 === 0 ? 'right' : 'left'}
                >
                    <div class="mb-4">
                        <span class="bg-white text-dark px-3 py-1 text-xs font-bold border-2 border-dark">
                            SEJAK {partner.since}
                        </span>
                    </div>
                    
                    <Heading level={3} size="md" color="white" class="uppercase mb-2">
                        {partner.name}
                    </Heading>
                    <Text color="white" size="sm" class="opacity-80 font-semibold mb-4">{partner.type}</Text>
                    
                    <Text color="white" size="sm" class="opacity-90 leading-relaxed">
                        {partner.collaboration}
                    </Text>
                </BrutalCard>
            ))}
        </div>
    </BrutalSection>

    <!-- Join Partnership -->
    <BrutalSection background="surface" padding="lg">
        <div class="max-w-4xl mx-auto text-center">
            <BrutalCard variant="accent" rotation="left" class="p-8">
                <Heading level={2} size="xl" color="white" class="uppercase mb-6">
                    ü§ù BERGABUNG SEBAGAI MITRA
                </Heading>
                <Text size="lg" color="white" class="font-semibold mb-8">
                    Tertarik berkolaborasi dengan KF13? Mari bersama-sama memajukan pendidikan fisika di Indonesia!
                </Text>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <BrutalButton
                        variant="primary"
                        size="lg"
                        href="https://wa.me/6282225009253?text=Halo%20KF13!%20Saya%20tertarik%20untuk%20bermitra%20dengan%20KF13"
                        target="_blank"
                        rel="noopener noreferrer"
                        ariaLabel="Diskusi kemitraan via WhatsApp"
                    >
                        üí¨ DISKUSI KEMITRAAN
                    </BrutalButton>
                    <BrutalButton
                        variant="secondary"
                        size="lg"
                        href="mailto:partnership@klubfisika.org"
                        ariaLabel="Kirim proposal kemitraan via email"
                    >
                        üìß KIRIM PROPOSAL
                    </BrutalButton>
                </div>
                
                <Text size="sm" color="white" class="mt-6 opacity-75">
                    Kami terbuka untuk berbagai bentuk kolaborasi: penelitian, magang, workshop, atau program lainnya
                </Text>
            </BrutalCard>
        </div>
    </BrutalSection>
</Layout>
