---
import Layout from "../layouts/Layout.astro";
import GradientSection from "../components/ui/GradientSection.astro";
import BrutalSection from "../components/ui/BrutalSection.astro";
import SectionHeader from "../components/ui/SectionHeader.astro";
import Heading from "../components/ui/Heading.astro";
import Text from "../components/ui/Text.astro";
import BrutalCard from "../components/ui/BrutalCard.astro";
import BrutalButton from "../components/ui/BrutalButton.astro";
---

<Layout 
    title="Research & Riset - KF13 Klub Fisika Indonesia" 
    description="Platform riset dan penelitian fisika KF13. Bergabunglah dalam komunitas peneliti untuk mengembangkan ilmu fisika Indonesia."
>
    <!-- Hero Section -->
    <GradientSection variant="blue-purple">
        <div class="max-w-6xl mx-auto px-6 text-center">
            <Heading level={1} size="3xl" class="uppercase tracking-tight transform -rotate-1 mb-8">
                RESEARCH & <span class="text-secondary dark:text-secondary-dark">RISET</span>
            </Heading>
            <BrutalCard variant="white" class="transform rotate-1 max-w-2xl mx-auto">
                <Text size="lg" class="font-bold mb-4">
                    üî¨ Bergabunglah dalam Revolusi Research Indonesia!
                </Text>
                <Text class="font-semibold">
                    Jadilah bagian dari komunitas peneliti dan inovator yang akan mengubah cara kita berkolaborasi dan berbagi pengetahuan di era digital.
                </Text>
            </BrutalCard>
        </div>
    </GradientSection>

    <!-- Research Platform -->
    <BrutalSection background="white" padding="lg">
        <SectionHeader title="PLATFORM RISET" subtitle="Akses portal penelitian dan kolaborasi" className="mb-8" />
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-6">
                <BrutalCard variant="primary" rotation="left">
                    <Heading level={3} size="lg" color="white" class="uppercase mb-4">
                        üöÄ MULAI JOURNEY ANDA
                    </Heading>
                    <Text color="white" class="opacity-90 mb-6">
                        Akses portal penelitian lengkap dengan tools kolaborasi, database jurnal, dan networking dengan peneliti lainnya.
                    </Text>
                    <BrutalButton
                        variant="surface"
                        size="lg"
                        href="http://47.84.35.77/wp/portal/?fcom_action=auth"
                        target="_blank"
                        rel="noopener noreferrer"
                        ariaLabel="Akses portal riset"
                    >
                        üî¨ AKSES PORTAL RISET
                    </BrutalButton>
                </BrutalCard>
            </div>
            
            <div class="space-y-6">
                <BrutalCard variant="accent" rotation="right">
                    <Heading level={3} size="md" color="white" class="uppercase mb-4">
                        üìä FITUR PLATFORM
                    </Heading>
                    <ul class="text-white space-y-2 text-sm">
                        <li>‚úÖ Database jurnal fisika terlengkap</li>
                        <li>‚úÖ Tools kolaborasi real-time</li>
                        <li>‚úÖ Networking dengan peneliti global</li>
                        <li>‚úÖ Project management terintegrasi</li>
                        <li>‚úÖ Publication tracking system</li>
                    </ul>
                </BrutalCard>
            </div>
        </div>
    </BrutalSection>

    <!-- Research Areas -->
    <BrutalSection background="surface" padding="lg">
        <SectionHeader title="BIDANG RISET" subtitle="Area penelitian yang kami fokuskan" className="mb-8" />
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {[
                {
                    title: "Fisika Kuantum",
                    description: "Penelitian quantum computing, quantum optics, dan aplikasi teknologi kuantum",
                    icon: "‚öõÔ∏è",
                    variant: "primary"
                },
                {
                    title: "Fisika Material",
                    description: "Pengembangan material baru, nanoteknologi, dan karakterisasi material",
                    icon: "üî¨",
                    variant: "secondary"
                },
                {
                    title: "Astrofisika",
                    description: "Studi tentang benda langit, kosmologi, dan fenomena alam semesta",
                    icon: "üåå",
                    variant: "accent"
                },
                {
                    title: "Fisika Medis",
                    description: "Aplikasi fisika dalam bidang kesehatan dan teknologi medis",
                    icon: "üè•",
                    variant: "primary"
                },
                {
                    title: "Energi Terbarukan",
                    description: "Penelitian solar cell, fuel cell, dan teknologi energi berkelanjutan",
                    icon: "‚ö°",
                    variant: "secondary"
                },
                {
                    title: "Fisika Komputasi",
                    description: "Simulasi numerik, machine learning, dan computational physics",
                    icon: "üíª",
                    variant: "accent"
                }
            ].map((area, index) => (
                <BrutalCard 
                    variant={area.variant}
                    rotation={index % 2 === 0 ? 'right' : 'left'}
                >
                    <div class="text-center mb-4">
                        <div class="text-4xl mb-3">{area.icon}</div>
                        <Heading level={3} size="sm" color="white" class="uppercase mb-2">
                            {area.title}
                        </Heading>
                    </div>
                    <Text color="white" size="sm" class="opacity-90 leading-relaxed text-center">
                        {area.description}
                    </Text>
                </BrutalCard>
            ))}
        </div>
    </BrutalSection>

    <!-- Join Research -->
    <BrutalSection background="white" padding="lg">
        <div class="max-w-4xl mx-auto text-center">
            <BrutalCard variant="accent" rotation="left" class="p-8">
                <Heading level={2} size="xl" color="white" class="uppercase mb-6">
                    ü§ù BERGABUNG DENGAN TIM RISET
                </Heading>
                <Text size="lg" color="white" class="font-semibold mb-8">
                    Punya ide penelitian menarik? Ingin berkolaborasi dengan peneliti lain? 
                    Mari bergabung dan wujudkan riset impian Anda!
                </Text>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <BrutalButton
                        variant="primary"
                        size="lg"
                        href="https://wa.me/6282225009253?text=Halo%20KF13!%20Saya%20tertarik%20bergabung%20dengan%20tim%20riset"
                        target="_blank"
                        rel="noopener noreferrer"
                        ariaLabel="Diskusi riset via WhatsApp"
                    >
                        üí¨ DISKUSI RISET
                    </BrutalButton>
                    <BrutalButton
                        variant="secondary"
                        size="lg"
                        href="mailto:research@klubfisika.org"
                        ariaLabel="Kirim proposal riset via email"
                    >
                        üìß KIRIM PROPOSAL
                    </BrutalButton>
                </div>
            </BrutalCard>
        </div>
    </BrutalSection>
</Layout>
