              </div>
            </div>
          </div>
        </div>

        <!-- Social Media Grid -->
        <div class="bg-accent dark:bg-accent-dark border-4 border-dark dark:border-light p-8 transform rotate-1 shadow-brutal">
          <h3 class="text-2xl font-black uppercase text-dark dark:text-light mb-6">MEDIA SOSIAL</h3>
          
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {[
              { name: "Instagram", icon: "üì∏", handle: "@kf13_indonesia", bg: "btn-secondary", url: "https://instagram.com/kf13_indonesia" },
              { name: "YouTube", icon: "üì∫", handle: "KF13 Indonesia", bg: "btn-primary", url: "https://youtube.com/@KF13Indonesia" },
              { name: "Telegram", icon: "‚úàÔ∏è", handle: "@kf13indonesia", bg: "btn-accent", url: "https://t.me/kf13indonesia" },
              { name: "Discord", icon: "üéÆ", handle: "KF13 Community", bg: "btn-primary", url: "https://discord.gg/kf13indonesia" },
              { name: "GitHub", icon: "üíª", handle: "klubfisika", bg: "bg-gray-800 text-on-dark", url: "https://github.com/klubfisika" },
              { name: "Email", icon: "üìß", handle: "info@klubfisika.org", bg: "btn-accent", url: "mailto:info@klubfisika.org" }
            ].map((social, index) => (
              <a 
                href={social.url}
                target={social.name === "Email" ? "_self" : "_blank"}
                rel={social.name === "Email" ? "" : "noopener noreferrer"}
                class={`${social.bg} dark:bg-slate-600 border-2 border-dark dark:border-light p-4 text-center transform ${index % 2 === 0 ? 'rotate-2' : '-rotate-2'} hover:rotate-0 transition-transform hover:scale-105`}
              >
                <div class="text-2xl mb-2">{social.icon}</div>
                <p class="font-bold text-xs text-on-primary">{social.name}</p>
                <p class="text-xs text-on-primary opacity-90">{social.handle}</p>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
