---
import SectionHeader from '../ui/SectionHeader.astro';
import BrutalCard from '../ui/BrutalCard.astro';
import BrutalButton from '../ui/BrutalButton.astro';
import BrutalSection from '../ui/BrutalSection.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import { Image } from 'astro:assets';

// Import gallery images with clean aliases
import experimentWave from '@assets/gallery/experiment-wave.jpg';
import rocketWorkshop from '@assets/gallery/rocket-workshop.jpg';
import quantumDiscussion from '@assets/gallery/quantum-discussion.jpg';
import lunarEclipse from '@assets/gallery/lunar-eclipse.jpg';
import physicsCompetition from '@assets/gallery/physics-competition.jpg';
import projectPresentation from '@assets/gallery/project-presentation.jpg';
---

<BrutalSection background="white" padding="lg" id="galeri">
  <div class="max-w-6xl mx-auto px-6">
    <SectionHeader title="GALERI KEGIATAN" subtitle="Dokumentasi aktivitas KF13" className="mb-8" />
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Real Activity Photos -->
      {[
        {
          title: "Eksperimen Gelombang Bunyi",
          desc: "Praktikum mengukur kecepatan gelombang bunyi menggunakan tabung resonansi",
          image: experimentWave,
          date: "November 2024"
        },
        {
          title: "Workshop Roket Air",
          desc: "Membuat dan meluncurkan roket air untuk memahami hukum Newton",
          image: rocketWorkshop, 
          date: "Oktober 2024"
        },
        {
          title: "Diskusi Fisika Kuantum",
          desc: "Sesi diskusi mendalam tentang interpretasi mekanika kuantum",
          image: quantumDiscussion,
          date: "September 2024"
        },
        {
          title: "Pengamatan Gerhana Bulan",
          desc: "Observasi gerhana bulan total dengan teleskop sederhana",
          image: lunarEclipse,
          date: "Agustus 2024"
        },
        {
          title: "Kompetisi Fisika Internal",
          desc: "Lomba pemecahan masalah fisika tingkat komunitas KF13",
          image: physicsCompetition,
          date: "Juli 2024"
        },
        {
          title: "Presentasi Proyek Akhir",
          desc: "Anggota mempresentasikan hasil penelitian mini semester ini",
          image: projectPresentation,
          date: "Juni 2024"
        }
      ].map((item, index) => (
        <BrutalCard variant="surface" rotation={index % 3 === 0 ? 'right' : index % 3 === 1 ? 'left' : 'right'} className="overflow-hidden">
          <!-- Image -->
          <div class="h-48 overflow-hidden">
            <Image 
              src={item.image}
              alt={item.title}
              width={400}
              height={300}
              format="webp"
              quality={80}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          
          <!-- Content -->
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <Heading level={3} size="sm" class="uppercase leading-tight">
                {item.title}
              </Heading>
              <BrutalCard variant="accent" className="text-xs px-2 py-1">
                <Text color="white" size="xs" class="font-bold">
                  {item.date}
                </Text>
              </BrutalCard>
            </div>
            <Text size="sm" class="font-semibold leading-relaxed">
              {item.desc}
            </Text>
          </div>
        </BrutalCard>
      ))}
    </div>

    <!-- Gallery CTA -->
    <div class="mt-8 text-center">
      <BrutalCard variant="primary" rotation="left" className="inline-block">
        <Text color="white" class="font-bold mb-4">
          ðŸ“¸ <strong>Lihat lebih banyak foto kegiatan kami!</strong>
        </Text>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <BrutalButton
            variant="surface"
            size="md"
            href="https://instagram.com/kf13_indonesia"
            target="_blank"
            rel="noopener noreferrer"
            ariaLabel="Lihat Instagram KF13"
          >
            ðŸ“¸ Instagram
          </BrutalButton>
          <BrutalButton
            variant="secondary"
            size="md"
            href="https://youtube.com/@KF13Indonesia"
            target="_blank"
            rel="noopener noreferrer"
            ariaLabel="Lihat YouTube KF13"
          >
            ðŸ“º YouTube
          </BrutalButton>
        </div>
      </BrutalCard>
    </div>
  </div>
</BrutalSection>
