---
import { Image } from 'astro:assets';
import kf13Logo from '@assets/images/kf13-logo.png';
---

<aside id="sidebar" class="fixed left-0 top-0 h-screen w-[72px] bg-white border-r flex flex-col z-50 transition-all duration-300">
  <!-- Logo -->
  <div class="flex items-center justify-center px-3 py-6">
    <a href="/" class="flex items-center gap-3">
      <Image src={kf13Logo} alt="KF13" width={32} height={32} class="rounded-lg" />
      <span class="text-xl font-bold text-gray-900 sidebar-text hidden">KF13</span>
    </a>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-2 space-y-1">
    <a href="/" class="flex items-center gap-4 px-3 py-3 rounded-lg hover:bg-gray-100 transition group justify-center sidebar-expanded:justify-start">
      <svg class="w-6 h-6 text-gray-700 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </svg>
      <span class="sidebar-text hidden text-gray-700 group-hover:text-gray-900">Beranda</span>
    </a>
    
    <a href="/platform/explore" class="flex items-center gap-4 px-3 py-3 rounded-lg hover:bg-gray-100 transition group justify-center sidebar-expanded:justify-start">
      <svg class="w-6 h-6 text-gray-700 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <span class="sidebar-text hidden text-gray-700 group-hover:text-gray-900">Jelajahi</span>
    </a>

    <a href="/platform/discussions" class="flex items-center gap-4 px-3 py-3 rounded-lg hover:bg-gray-100 transition group justify-center sidebar-expanded:justify-start">
      <svg class="w-6 h-6 text-gray-700 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      <span class="sidebar-text hidden text-gray-700 group-hover:text-gray-900">Diskusi</span>
    </a>

    <a href="/platform/projects" class="flex items-center gap-4 px-3 py-3 rounded-lg hover:bg-gray-100 transition group justify-center sidebar-expanded:justify-start">
      <svg class="w-6 h-6 text-gray-700 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
      </svg>
      <span class="sidebar-text hidden text-gray-700 group-hover:text-gray-900">Proyek</span>
    </a>

    <a href="/blog" class="flex items-center gap-4 px-3 py-3 rounded-lg hover:bg-gray-100 transition group justify-center sidebar-expanded:justify-start">
      <svg class="w-6 h-6 text-gray-700 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
      </svg>
      <span class="sidebar-text hidden text-gray-700 group-hover:text-gray-900">Blog</span>
    </a>
  </nav>

  <!-- Bottom Actions -->
  <div class="px-2 pb-4 space-y-1">
    <a href="/mulai" class="flex items-center gap-4 px-3 py-3 rounded-lg bg-green-600 hover:bg-green-700 transition group justify-center sidebar-expanded:justify-start">
      <svg class="w-6 h-6 text-white flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span class="sidebar-text hidden text-white font-medium">Buat Post</span>
    </a>

    <a href="/platform/profile" class="flex items-center gap-4 px-3 py-3 rounded-lg hover:bg-gray-100 transition group justify-center sidebar-expanded:justify-start">
      <div class="w-6 h-6 bg-gradient-to-br from-green-500 to-teal-500 rounded-full flex items-center justify-center text-white text-xs font-bold flex-shrink-0">
        U
      </div>
      <span class="sidebar-text hidden text-gray-700 group-hover:text-gray-900">Profil</span>
    </a>

    <!-- Toggle Button -->
    <button id="toggle-sidebar" class="flex items-center gap-4 px-3 py-3 rounded-lg hover:bg-gray-100 transition group w-full justify-center sidebar-expanded:justify-start">
      <svg id="toggle-icon" class="w-6 h-6 text-gray-700 flex-shrink-0 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
      <span class="sidebar-text hidden text-gray-700 group-hover:text-gray-900">Menu</span>
    </button>
  </div>
</aside>

<script>
  const sidebar = document.getElementById('sidebar');
  const mainContent = document.getElementById('main-content');
  const toggleBtn = document.getElementById('toggle-sidebar');
  const toggleIcon = document.getElementById('toggle-icon');
  const sidebarTexts = document.querySelectorAll('.sidebar-text');
  const navItems = sidebar?.querySelectorAll('a, button');
  
  let isExpanded = localStorage.getItem('sidebar-expanded') === 'true';
  
  function updateSidebar() {
    if (!sidebar || !mainContent) return;
    
    if (isExpanded) {
      sidebar.style.width = '244px';
      mainContent.style.marginLeft = '244px';
      sidebarTexts.forEach(el => el.classList.remove('hidden'));
      if (toggleIcon) toggleIcon.style.transform = 'rotate(90deg)';
      navItems?.forEach(el => {
        el.classList.remove('justify-center');
        el.classList.add('justify-start');
      });
    } else {
      sidebar.style.width = '72px';
      mainContent.style.marginLeft = '72px';
      sidebarTexts.forEach(el => el.classList.add('hidden'));
      if (toggleIcon) toggleIcon.style.transform = 'rotate(0deg)';
      navItems?.forEach(el => {
        el.classList.add('justify-center');
        el.classList.remove('justify-start');
      });
    }
  }
  
  updateSidebar();
  
  toggleBtn?.addEventListener('click', () => {
    isExpanded = !isExpanded;
    localStorage.setItem('sidebar-expanded', isExpanded.toString());
    updateSidebar();
  });
</script>
