---
import type { FeaturedArticleProps } from "@types/blog";

const { post }: FeaturedArticleProps = Astro.props;
---

<div class="lg:col-span-2">
  <article class="relative bg-primary dark:bg-slate-600 border-4 border-dark dark:border-light p-8 transform -rotate-1 hover:rotate-0 transition-transform shadow-brutal hover:scale-[1.02]" tabindex="0" role="article" aria-labelledby="featured-title" data-article={post.category} data-tags={post.tags.join(',')}>
    <div class="flex flex-wrap gap-2 mb-4">
      <span class="bg-white text-dark px-3 py-1 text-xs font-bold border-2 border-dark">{post.category?.toUpperCase() || 'ARTIKEL'}</span>
      <span class="bg-white text-dark px-3 py-1 text-xs font-bold border-2 border-dark">POPULER</span>
    </div>
    <h2 id="featured-title" class="text-3xl md:text-4xl font-black uppercase text-on-primary mb-4 leading-tight">
      <a href={`/blog/${post.slug}`} class="stretched-link" aria-label={`Baca artikel: ${post.title}`}>
        {post.title}
      </a>
    </h2>
    <p class="text-on-primary opacity-90 text-lg leading-relaxed mb-6">
      {post.excerpt}
    </p>
