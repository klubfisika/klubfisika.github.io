---
import { Image } from 'astro:assets';
import kf13Logo from '@assets/images/kf13-logo.png';
---

<footer class="border-t bg-white mt-12">
  <div class="max-w-4xl mx-auto px-4 py-6 text-center">
    <div class="flex items-center justify-center gap-2 text-green-600 font-bold mb-2">
      <Image src={kf13Logo} alt="KF13" width={24} height={24} class="rounded" />
      <span>KF13</span>
    </div>
    <p class="text-sm text-gray-500">Platform Komunitas Fisika Indonesia</p>
    <div class="flex justify-center gap-4 mt-3 text-sm">
      <a href="/" class="text-gray-500 hover:text-green-600 transition">Website</a>
      <a href="/platform" class="text-gray-500 hover:text-green-600 transition">Platform</a>
      <a href="/blog" class="text-gray-500 hover:text-green-600 transition">Blog</a>
    </div>
  </div>
</footer>
