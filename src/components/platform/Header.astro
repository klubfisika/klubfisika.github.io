---
import { Image } from 'astro:assets';
import kf13Logo from '@assets/images/kf13-logo.png';
import ProfileDropdown from '@components/qwik/ProfileDropdown.tsx';
import SearchBar from '@components/qwik/SearchBar.tsx';
import NotificationDropdown from '@components/qwik/NotificationDropdown.tsx';
import MessageDropdown from '@components/qwik/MessageDropdown.tsx';
import CreateMenu from '@components/qwik/CreateMenu.tsx';
---

<nav class="bg-gray-50 border-b border-gray-100 sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-14">
      <!-- Logo -->
      <a href="/platform" class="flex items-center gap-2 font-bold text-blue-800">
        <Image src={kf13Logo} alt="KF13" width={36} height={36} class="rounded-lg" />
        <span class="hidden sm:block text-xl">KF13</span>
      </a>
      
      <!-- Search Bar -->
      <div class="hidden md:flex flex-1 max-w-md mx-8">
        <SearchBar client:load />
      </div>
      
      <!-- Actions -->
      <div class="flex items-center gap-2">
        <NotificationDropdown client:load />
        <MessageDropdown client:load />
        <CreateMenu client:load />
        <ProfileDropdown client:load />
      </div>
    </div>
  </div>
</nav>
