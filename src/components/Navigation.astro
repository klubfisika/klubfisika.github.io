---
import { Image } from 'astro:assets';
import kf13Logo from '@assets/images/kf13-logo.png';
---
<nav class="fixed top-0 left-0 right-0 z-40 bg-surface/90 dark:bg-surface-dark/90 backdrop-blur-md border-b-4 border-dark dark:border-light transition-colors">
  <div class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center gap-3 hover:scale-105 transition-transform">
        <div class="w-10 h-10 bg-white border-2 border-dark dark:border-light flex items-center justify-center transform rotate-12 overflow-hidden">
          <Image 
            src={kf13Logo}
            alt="KF13 Logo"
            width={32}
            height={32}
            format="webp"
            quality={90}
            class="w-8 h-8 object-contain"
          />
        </div>
        <div>
          <h1 class="font-black text-lg text-dark dark:text-light">KF13</h1>
          <p class="text-xs font-semibold text-dark dark:text-light opacity-75">Klub Fisika Indonesia</p>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        {[
          { label: "Tentang", href: "/#tentang" },
          { label: "Program", href: "/#program" },
          { label: "Blog", href: "/blog" },
          { label: "Events", href: "/events" },
          { label: "Galeri", href: "/#galeri" },
          { label: "Mitra", href: "/partnership" },
          { label: "Kontak", href: "/contact" },
          { label: "Gabung", href: "/#gabung" }
        ].map((item, index) => (
          <a 
            href={item.href}
            class={`font-bold text-dark dark:text-light hover:text-blue-600 dark:hover:text-yellow-400 transition-colors transform hover:scale-105 ${index % 2 === 0 ? 'hover:rotate-1' : 'hover:-rotate-1'}`}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden btn-brutal bg-secondary dark:bg-secondary-dark text-dark dark:text-light p-2"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col gap-3">
        {[
          { label: "Tentang", href: "/#tentang" },
          { label: "Program", href: "/#program" },
          { label: "Blog", href: "/blog" },
          { label: "Events", href: "/events" },
          { label: "Galeri", href: "/#galeri" },
          { label: "Mitra", href: "/partnership" },
          { label: "Kontak", href: "/contact" },
          { label: "Gabung", href: "/#gabung" }
        ].map((item, index) => (
          <a 
            href={item.href}
            class={`bg-${index % 4 === 0 ? 'pink' : index % 4 === 1 ? 'blue' : index % 4 === 2 ? 'accent' : 'secondary'} dark:bg-gray-700 border-2 border-dark dark:border-light p-3 font-bold text-dark dark:text-light transform ${index % 2 === 0 ? 'rotate-1' : '-rotate-1'} hover:rotate-0 transition-transform`}
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Navigation handling with smooth scroll
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Handle navigation links with smooth scroll
  document.querySelectorAll('nav a[href]').forEach(link => {
    link.addEventListener('click', function (e) {
      const href = this.getAttribute('href');
      
      // Close mobile menu for any navigation
      mobileMenu?.classList.add('hidden');
      
      // Handle hash links on current page
      if (href && href.startsWith('#')) {
        e.preventDefault();
        const target = document.querySelector(href);
        if (target) {
          const navHeight = 80;
          const targetPosition = target.offsetTop - navHeight;
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      }
      // Handle absolute hash links (/#section)
      else if (href && href.startsWith('/#')) {
        const hash = href.substring(1); // Remove leading /
        if (window.location.pathname === '/') {
          // On home page, scroll to section
          e.preventDefault();
          const target = document.querySelector(hash);
          if (target) {
            const navHeight = 80;
            const targetPosition = target.offsetTop - navHeight;
            window.scrollTo({
              top: targetPosition,
              behavior: 'smooth'
            });
          }
        }
        // On other pages, let browser navigate normally (will go to home + hash)
      }
    });
  });

  // Add scroll effect to navbar
  window.addEventListener('scroll', () => {
    const nav = document.querySelector('nav');
    if (window.scrollY > 100) {
      nav?.classList.add('bg-surface/95', 'dark:bg-surface-dark/95');
      nav?.classList.remove('bg-surface/90', 'dark:bg-surface-dark/90');
    } else {
      nav?.classList.remove('bg-surface/95', 'dark:bg-surface-dark/95');
      nav?.classList.add('bg-surface/90', 'dark:bg-surface-dark/90');
    }
  });
});
</script>
