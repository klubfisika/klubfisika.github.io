---
interface Props {
  placeholder?: string;
  required?: boolean;
  name?: string;
  id?: string;
  rows?: number;
  cols?: number;
  value?: string;
  size?: 'sm' | 'md' | 'lg';
  className?: string;
}

const { 
  placeholder,
  required = false,
  name,
  id,
  rows = 4,
  cols,
  value,
  size = 'md',
  className = ""
} = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg'
};

const textareaClasses = `${sizeClasses[size]} border-4 border-dark dark:border-light bg-white dark:bg-slate-800 text-dark dark:text-light font-bold focus:outline-none focus:ring-4 focus:ring-accent transition-all resize-none ${className}`;
---

<textarea 
  placeholder={placeholder}
  required={required}
  name={name}
  id={id}
  rows={rows}
  cols={cols}
  value={value}
  class={textareaClasses}
></textarea>
