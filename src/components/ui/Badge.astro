---
interface Props {
  variant?: 'light' | 'dark' | 'primary' | 'secondary' | 'accent';
  size?: 'xs' | 'sm' | 'md';
  className?: string;
}

const { 
  variant = 'light',
  size = 'sm',
  className = ""
} = Astro.props;

const variantClasses = {
  light: 'bg-white dark:bg-slate-800 text-on-light dark:text-on-dark',
  dark: 'bg-dark dark:bg-light text-on-dark dark:text-on-light',
  primary: 'btn-primary text-xs',
  secondary: 'btn-secondary text-xs', 
  accent: 'btn-accent text-xs'
};

const sizeClasses = {
  xs: 'px-2 py-1 text-xs',
  sm: 'px-3 py-1 text-xs',
  md: 'px-4 py-2 text-sm'
};

const badgeClasses = `${variantClasses[variant]} ${sizeClasses[size]} font-bold border-2 border-dark dark:border-light inline-block ${className}`;
---

<span class={badgeClasses}>
  <slot />
</span>
