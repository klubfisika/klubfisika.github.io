---
interface Props {
  quote: string;
  author: string;
  role: string;
  photo?: string;
  className?: string;
}

const { 
  quote, 
  author, 
  role, 
  photo = "/placeholder-avatar.jpg",
  className = ""
} = Astro.props;
---

<div class={`bg-white dark:bg-slate-600 border-4 border-dark dark:border-light p-6 transform hover:rotate-0 transition-transform shadow-brutal-sm ${className}`}>
  <!-- Quote -->
  <div class="mb-4">
    <div class="text-4xl text-primary dark:text-primary-dark mb-2">"</div>
    <p class="text-dark dark:text-light font-semibold leading-relaxed italic">
      {quote}
    </p>
    <div class="text-4xl text-primary dark:text-primary-dark text-right -mt-4">"</div>
  </div>
  
  <!-- Author Info -->
  <div class="flex items-center gap-4 pt-4 border-t-2 border-dark dark:border-light">
    <div class="w-12 h-12 border-2 border-dark dark:border-light overflow-hidden">
      <img 
        src={photo} 
        alt={author}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
    <div>
      <p class="font-black text-dark dark:text-light">{author}</p>
      <p class="text-sm text-dark dark:text-light opacity-75">{role}</p>
    </div>
  </div>
</div>
