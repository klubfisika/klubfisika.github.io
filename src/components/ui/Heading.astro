---
export interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl';
  weight?: 'normal' | 'medium' | 'semibold' | 'bold' | 'extrabold';
  color?: 'primary' | 'secondary' | 'accent' | 'dark' | 'light';
  class?: string;
}

const { 
  level = 2, 
  size = 'lg', 
  weight = 'bold', 
  color = 'dark',
  class: className = '',
  ...props 
} = Astro.props;

const sizeClasses = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-2xl',
  xl: 'text-3xl',
  '2xl': 'text-4xl',
  '3xl': 'text-5xl'
};

const weightClasses = {
  normal: 'font-normal',
  medium: 'font-medium',
  semibold: 'font-semibold', 
  bold: 'font-bold',
  extrabold: 'font-extrabold'
};

const colorClasses = {
  primary: 'text-primary',
  secondary: 'text-secondary',
  accent: 'text-accent',
  dark: 'text-dark dark:text-light',
  light: 'text-light dark:text-dark'
};

const baseClasses = `${sizeClasses[size]} ${weightClasses[weight]} ${colorClasses[color]} ${className}`;

const Element = `h${level}` as keyof JSX.IntrinsicElements;
---

<Element class={baseClasses} {...props}>
  <slot />
</Element>
