---
export interface Props {
  src: string;
  alt: string;
  className?: string;
  loading?: 'lazy' | 'eager';
  width?: number;
  height?: number;
}

const { src, alt, className = '', loading = 'lazy', width, height } = Astro.props;
---

<img 
  src={src}
  alt={alt}
  class={className}
  loading={loading}
  width={width}
  height={height}
  onerror="this.src='/placeholder-image.jpg'; this.onerror=null;"
/>
