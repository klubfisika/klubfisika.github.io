---
export interface Props {
  justify?: 'start' | 'center' | 'between' | 'around' | 'evenly';
  align?: 'start' | 'center' | 'end' | 'stretch';
  gap?: 'sm' | 'md' | 'lg' | 'xl';
  wrap?: boolean;
  class?: string;
}

const { 
  justify = 'center', 
  align = 'center', 
  gap = 'md', 
  wrap = false,
  class: className = '',
  ...props 
} = Astro.props;

const justifyClasses = {
  start: 'justify-start',
  center: 'justify-center', 
  between: 'justify-between',
  around: 'justify-around',
  evenly: 'justify-evenly'
};

const alignClasses = {
  start: 'items-start',
  center: 'items-center',
  end: 'items-end', 
  stretch: 'items-stretch'
};

const gapClasses = {
  sm: 'gap-2',
  md: 'gap-4',
  lg: 'gap-6',
  xl: 'gap-8'
};

const baseClasses = `flex ${justifyClasses[justify]} ${alignClasses[align]} ${gapClasses[gap]} ${wrap ? 'flex-wrap' : ''} ${className}`;
---

<div class={baseClasses} {...props}>
  <slot />
</div>
