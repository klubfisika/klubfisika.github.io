---
interface Props {
  value: string;
  label: string;
  icon?: string;
  size?: 'sm' | 'md' | 'lg';
  className?: string;
}

const { 
  value,
  label,
  icon,
  size = 'md',
  className = ""
} = Astro.props;

const sizeClasses = {
  sm: {
    value: 'text-lg font-black',
    label: 'text-xs font-bold',
    icon: 'text-xl'
  },
  md: {
    value: 'text-3xl font-black',
    label: 'text-sm font-bold', 
    icon: 'text-3xl'
  },
  lg: {
    value: 'text-4xl font-black',
    label: 'text-sm font-bold',
    icon: 'text-4xl'
  }
};
---

<div class={`flex flex-col items-center justify-center text-center ${className}`}>
  {icon && (
    <div class={`${sizeClasses[size].icon} mb-3 leading-none`} aria-hidden="true">{icon}</div>
  )}
  <div class={`${sizeClasses[size].value} text-primary dark:text-primary-dark mb-1`}>{value}</div>
  <div class={`${sizeClasses[size].label} text-dark dark:text-light`}>{label}</div>
</div>
