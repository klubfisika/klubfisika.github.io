---
interface Props {
  thickness?: '2' | '3' | '4';
  shadow?: 'sm' | 'md' | 'lg' | 'none';
  rounded?: boolean;
  className?: string;
}

const { 
  thickness = '4',
  shadow = 'sm',
  rounded = false,
  className = ""
} = Astro.props;

const thicknessClasses = {
  '2': 'border-2',
  '3': 'border-3',
  '4': 'border-4'
};

const shadowClasses = {
  none: '',
  sm: 'shadow-brutal-sm',
  md: 'shadow-brutal',
  lg: 'shadow-brutal-lg'
};

const borderClasses = `${thicknessClasses[thickness]} border-dark dark:border-light ${shadowClasses[shadow]} ${rounded ? 'rounded' : ''} ${className}`;
---

<div class={borderClasses}>
  <slot />
</div>
