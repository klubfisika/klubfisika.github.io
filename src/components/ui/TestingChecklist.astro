<div class="fixed bottom-4 left-4 z-50 bg-surface border-4 border-dark dark:border-light p-4 shadow-brutal max-w-sm hidden" id="testing-checklist">
  <h3 class="font-black text-dark dark:text-light mb-3">ðŸ§ª TESTING CHECKLIST</h3>
  
  <div class="space-y-3 text-sm">
    <div class="flex items-start gap-3">
      <input type="checkbox" id="test-faq" class="brutal-checkbox mt-1">
      <label for="test-faq" class="text-dark dark:text-light leading-tight">FAQ Accordion berfungsi dengan baik</label>
    </div>
    
    <div class="flex items-start gap-3">
      <input type="checkbox" id="test-counters" class="brutal-checkbox mt-1">
      <label for="test-counters" class="text-dark dark:text-light leading-tight">Animated Counters berjalan smooth</label>
    </div>
    
    <div class="flex items-start gap-3">
      <input type="checkbox" id="test-form" class="brutal-checkbox mt-1">
      <label for="test-form" class="text-dark dark:text-light leading-tight">Contact Form validation bekerja</label>
    </div>
    
    <div class="flex items-start gap-3">
      <input type="checkbox" id="test-whatsapp" class="brutal-checkbox mt-1">
      <label for="test-whatsapp" class="text-dark dark:text-light leading-tight">WhatsApp Button redirect benar</label>
    </div>
    
    <div class="flex items-start gap-3">
      <input type="checkbox" id="test-navigation" class="brutal-checkbox mt-1">
      <label for="test-navigation" class="text-dark dark:text-light leading-tight">Navigation Scroll smooth</label>
    </div>
    
    <div class="flex items-start gap-3">
      <input type="checkbox" id="test-darkmode" class="brutal-checkbox mt-1">
      <label for="test-darkmode" class="text-dark dark:text-light leading-tight">Dark Mode Toggle berfungsi</label>
    </div>
    
    <div class="flex items-start gap-3">
      <input type="checkbox" id="test-mobile" class="brutal-checkbox mt-1">
      <label for="test-mobile" class="text-dark dark:text-light leading-tight">Mobile Responsive layout baik</label>
    </div>
  </div>
  
  <button id="hide-checklist" class="mt-4 text-xs bg-accent text-white px-3 py-2 border-2 border-dark dark:border-light font-bold hover:bg-secondary transition-colors">
    HIDE CHECKLIST
  </button>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const hideBtn = document.getElementById('hide-checklist');
  const checklist = document.getElementById('testing-checklist');
  
  hideBtn?.addEventListener('click', () => {
    checklist?.classList.add('hidden');
  });
});
</script>
