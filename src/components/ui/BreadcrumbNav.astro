---
interface Props {
  items: Array<{
    label: string;
    href?: string;
  }>;
  separator?: string;
  className?: string;
}

const { 
  items,
  separator = 'â†’',
  className = ""
} = Astro.props;
---

<nav class={`flex items-center gap-2 text-sm ${className}`}>
  {items.map((item, index) => (
    <>
      {item.href ? (
        <NavLink href={item.href} className="hover:underline">
          {item.label}
        </NavLink>
      ) : (
        <span class="text-dark dark:text-light opacity-75">{item.label}</span>
      )}
      
      {index < items.length - 1 && (
        <span class="text-dark dark:text-light opacity-50">{separator}</span>
      )}
    </>
  ))}
</nav>
