---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  variant?: 'primary' | 'accent' | 'surface';
  class?: string;
}

const { size = 'md', variant = 'accent', class: className = '', ...props } = Astro.props;

const sizeClasses = {
  sm: 'w-12 h-12',
  md: 'w-14 h-14', 
  lg: 'w-16 h-16'
};

const variantClasses = {
  primary: 'btn-primary',
  accent: 'btn-accent',
  surface: 'bg-surface dark:bg-slate-600 hover:bg-accent dark:hover:bg-purple-600'
};

const baseClasses = `flex items-center justify-center border-3 border-dark dark:border-light rounded-full shadow-brutal hover:scale-110 transition-all bounce-fun ${sizeClasses[size]} ${variantClasses[variant]} ${className}`;
---

<button class={baseClasses} {...props}>
  <slot />
</button>

<style>
  .bounce-fun {
    animation: bounce-fun 2s infinite;
  }

  @keyframes bounce-fun {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
</style>
