---
interface Props {
  href: string;
  active?: boolean;
  external?: boolean;
  className?: string;
}

const { 
  href,
  active = false,
  external = false,
  className = ""
} = Astro.props;

const linkClasses = `font-bold text-dark dark:text-light hover:text-blue-600 dark:hover:text-blue-300 transition-colors transform hover:scale-105 ${active ? 'text-blue-600 dark:text-blue-300' : ''} ${className}`;
---

<a 
  href={href}
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
  class={linkClasses}
>
  <slot />
</a>
