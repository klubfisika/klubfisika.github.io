---
import Header from '@components/platform/Header.astro';
import LeftSidebar from '@components/qwik/LeftSidebar.tsx';
import RightSidebar from '@components/platform/RightSidebar.astro';
import MobileNav from '@components/qwik/MobileNav.tsx';
import '@styles/platform.css';

interface Props {
  title: string;
  description?: string;
  activeNav?: string;
  hideRightSidebar?: boolean;
}

const { title, description = 'KF13 Member Platform', activeNav, hideRightSidebar = false } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | KF13 Platform</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- PWA -->
    <link rel="manifest" href="/platform-manifest.json" />
    <meta name="theme-color" content="#16a34a" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="KF13 Platform" />
  </head>
  <body class="bg-gray-100 min-h-screen">
    <Header />

    <!-- Left Sidebar -->
    <LeftSidebar activeNav={activeNav} client:load />

    <div id="main-wrapper" class="lg:ml-64 flex transition-all duration-300">
      <!-- Main Content -->
      <main class={`flex-1 min-w-0 px-4 py-4 lg:py-6 ${hideRightSidebar ? 'xl:pr-4' : ''}`}>
        <slot />
      </main>

      <!-- Right Sidebar -->
      {!hideRightSidebar && (
        <RightSidebar>
          <slot name="sidebar" />
        </RightSidebar>
      )}
    </div>

    <!-- Mobile Navigation -->
    <MobileNav client:load activeNav={activeNav} />
    
    <!-- Spacer for mobile bottom nav -->
    <div class="lg:hidden h-16"></div>

    <script>
      // Sync main content margin with sidebar state
      const updateMainMargin = (isMinimized: boolean) => {
        const mainWrapper = document.getElementById('main-wrapper');
        if (mainWrapper) {
          if (isMinimized) {
            mainWrapper.classList.remove('lg:ml-64');
            mainWrapper.classList.add('lg:ml-16');
          } else {
            mainWrapper.classList.remove('lg:ml-16');
            mainWrapper.classList.add('lg:ml-64');
          }
        }
      };
      
      // Initial state
      updateMainMargin(localStorage.getItem('sidebar-minimized') === 'true');
      
      // Listen for sidebar toggle
      window.addEventListener('sidebar-toggle', (e: any) => {
        updateMainMargin(e.detail);
      });
    </script>
  </body>
</html>
